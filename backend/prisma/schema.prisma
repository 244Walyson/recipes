// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String             @id @default(uuid())
  name               String
  email              String             @unique
  password           String
  imgUrl             String?
  numberOfRecipes    Int                @default(0)
  numberOfFollowers  Int                @default(0)
  numberOfFollowings Int                @default(0)
  username           String             @unique
  createdAt          DateTime           @default(now())
  isActive           Boolean            @default(true)
  recipes            Recipe[]
  comments           Comment[]
  refreshTokens      RefreshToken[]
  passwordRecoveries PasswordRecovery[]
}

model RefreshToken {
  id      String  @id @default(uuid())
  token   String
  user    User    @relation(fields: [userId], references: [id])
  userId  String
  email   String
  revoked Boolean @default(false)
}

model PasswordRecovery {
  id        String  @id @default(uuid())
  token     String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  email     String
  expiresAt BigInt
  revoked   Boolean @default(false)
}

model Recipe {
  id                String   @id @default(uuid())
  name              String
  preparationMethod String
  preparationTime   Int
  imgUrl            String?
  difficultyLevel   String?
  category          String?
  tags              String[]
  calories          Int?
  macronutrients    Json?
  servingSize       String?
  allergens         String[]
  cookTime          Int?
  totalTime         Int?
  servingCount      Int?
  viewCount         Int      @default(0)
  favoriteCount     Int      @default(0)
  averageRating     Float?
  costEstimate      Float?
  experienceLevel   String?
  additionalTips    String?
  videoUrl          String?
  sourceUrl         String?
  isPublished       Boolean  @default(true)
  version           Int      @default(1)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  deleted           Boolean  @default(false)
  userId            String
  numberOflikes     Int      @default(0)

  user              User                 @relation(fields: [userId], references: [id])
  comments          Comment[]
  recipeIngredients RecipeIngredient[]
  mealTypes         RecipeMealType[]
  kitchenTools      RecipeKitchenTool[]
  cuisineStyles     RecipeCuisineStyle[]
}

model RecipeIngredient {
  quantity     Float
  unit         String
  recipe       Recipe     @relation(fields: [recipeId], references: [id])
  recipeId     String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId String

  @@id([recipeId, ingredientId])
}

model Ingredient {
  id                String             @id @default(uuid())
  name              String             @unique
  recipeIngredients RecipeIngredient[]
}

model MealType {
  id      String           @id @default(uuid())
  name    String
  recipes RecipeMealType[]
}

model KitchenTool {
  id          String              @id @default(uuid())
  name        String
  description String?
  recipes     RecipeKitchenTool[]
}

model CuisineStyle {
  id      String               @id @default(uuid())
  name    String
  recipes RecipeCuisineStyle[]
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  userId    String
  recipeId  String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  recipe Recipe @relation(fields: [recipeId], references: [id])
}

model RecipeMealType {
  recipeId   String
  mealTypeId String
  Recipe     Recipe   @relation(fields: [recipeId], references: [id])
  MealType   MealType @relation(fields: [mealTypeId], references: [id])

  @@id([recipeId, mealTypeId])
}

model RecipeKitchenTool {
  recipeId      String
  kitchenToolId String
  Recipe        Recipe      @relation(fields: [recipeId], references: [id])
  KitchenTool   KitchenTool @relation(fields: [kitchenToolId], references: [id])

  @@id([recipeId, kitchenToolId])
}

model RecipeCuisineStyle {
  recipeId       String
  cuisineStyleId String
  Recipe         Recipe       @relation(fields: [recipeId], references: [id])
  CuisineStyle   CuisineStyle @relation(fields: [cuisineStyleId], references: [id])

  @@id([recipeId, cuisineStyleId])
}
